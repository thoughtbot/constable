<li class="tbds-media tbds-block-stack__item" id="comment-<%= @comment.id %>">
  <div class="tbds-media__figure comment-information">
    <img
      alt="<%= @comment.user.name %>"
      class="tbds-avatar tbds-avatar--circle"
      height="80"
      src="<%= gravatar @comment.user %>"
      width="80"
    >
  </div>

  <div class="tbds-media__body">
    <div class="author-information">
      <h4 class="author"><%= @comment.user.name %></h4>
      <a href="#comment-<%= @comment.id %>" class="comment-time">
        <%= relative_timestamp(@comment.inserted_at) %>
      </a>

      <%= if @comment.user_id == @current_user.id do %>
        <%= link to: Routes.announcement_comment_path(ConstableWeb.Endpoint, :edit, @comment.announcement_id, @comment), class: "edit-comment", data: [role: "edit-comment"] do %>
          <%= gettext "(edit)" %>
        <% end %>
      <% end %>
    </div>

    <div class="comment-body">
      <%= raw markdown_with_users(@comment.body) %>
    </div>
  </div>
</li>
