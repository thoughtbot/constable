{
  "name": "constable",
  "description": "Constable Heroku review app config",
  "scripts": {
    "postdeploy": "mix ecto.migrate && mix run priv/repo/seeds.exs"
  },
  "env": {
    "ADMIN_EMAILS": {
      "required": true
    },
    "BUILDPACK_URL": {
      "required": true
    },
    "CLIENT_ID": {
      "required": true
    },
    "CLIENT_SECRET": {
      "required": true
    },
    "HEROKU_APP_NAME": {
      "required": true
    },
    "HONEYBADGER_API_KEY": {
      "required": true
    },
    "HONEYBADGER_ENV": "review",
    "INBOUND_EMAIL_DOMAIN": {
      "required": true
    },
    "MANDRILL_KEY": {
      "required": true
    },
    "MIX_ENV": {
      "required": true
    },
    "OAUTH_REDIRECT_OVERRIDE": "https://constable-oauth-redirector.herokuapp.com/auth",
    "OUTBOUND_EMAIL_DOMAIN": {
      "required": true
    },
    "PERMITTED_EMAIL_DOMAIN": {
      "required": true
    },
    "SECRET_KEY_BASE": {
      "generator": "secret"
    },
    "SHUBOX_SCRIPT_URL": {
      "required": true
    },
    "SLACK_WEBHOOK_URL": {
      "required": true
    },
    "URL_PORT": {
      "required": true
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "addons": [
    "heroku-postgresql",
    "scheduler"
  ],
  "buildpacks": [
    {
      "url": "https://github.com/HashNuke/heroku-buildpack-elixir"
    },
    {
      "url": "https://github.com/gjaldon/phoenix-static-buildpack"
    }
  ]
}
